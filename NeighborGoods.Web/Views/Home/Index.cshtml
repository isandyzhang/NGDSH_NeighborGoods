@model NeighborGoods.Web.Models.ViewModels.ListingSearchViewModel
@using NeighborGoods.Web.Utils

@{
    ViewData["Title"] = "商品列表";
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
}

<div class="container-fluid px-3">
    <!-- 成功訊息提醒 -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
            </svg>
            <strong>@TempData["SuccessMessage"]</strong>
            <a asp-controller="Listing" asp-action="My" class="alert-link ms-2">前往我的商品</a>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- 錯誤訊息提醒 -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z"/>
                <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
            </svg>
            <strong>@TempData["ErrorMessage"]</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- 快捷按鈕區域：同一 DIV 一起 RWD -->
    <div class="quick-actions mt-4 mb-3">
        <div class="quick-actions-buttons row g-2">
            <div class="col-6 col-md-3">
                @if (isAuthenticated)
                {
                    <a asp-controller="Listing" asp-action="Create" class="btn btn-primary quick-action-btn w-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle me-2" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                        </svg>
                        刊登商品
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary quick-action-btn w-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle me-2" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                        </svg>
                        刊登商品
                    </a>
                }
            </div>
            <div class="col-6 col-md-3">
                @if (isAuthenticated)
                {
                    <a asp-controller="Message" asp-action="Conversations" class="btn btn-outline-primary quick-action-btn w-100">
                        <span class="d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-envelope me-2" viewBox="0 0 16 16">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                            </svg>
                            我的訊息
                        </span>
                        <span id="unread-message-badge" class="ms-2">
                            @await Component.InvokeAsync("UnreadMessageCount")
                        </span>
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary quick-action-btn w-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-envelope me-2" viewBox="0 0 16 16">
                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                        </svg>
                        我的訊息
                    </a>
                }
            </div>
            <div class="col-6 col-md-3">
                @if (isAuthenticated)
                {
                    <a asp-controller="Listing" asp-action="My" class="btn btn-outline-primary quick-action-btn w-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-grid me-2" viewBox="0 0 16 16">
                            <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5z"/>
                        </svg>
                        我的商品
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary quick-action-btn w-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-grid me-2" viewBox="0 0 16 16">
                            <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5z"/>
                        </svg>
                        我的商品
                    </a>
                }
            </div>
            @if (isAuthenticated && ViewBag.IsEmailNotificationEnabled != true)
            {
                <div class="col-6 col-md-3">
                    @if (ViewBag.HasEmail == true)
                    {
                        <form asp-controller="Account" asp-action="EnableEmailNotification" method="post" class="d-inline w-100">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success quick-action-btn w-100 email-notification-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell me-2" viewBox="0 0 16 16">
                                    <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628.134 2.197.459 3.742.16.767.376 1.566.663 2.258h10.244c.287-.692.502-1.49.663-2.258C13.866 8.197 14 6.628 14 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1h12.44z"/>
                                </svg>
                                啟動Email通知
                            </button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-success quick-action-btn w-100 email-notification-btn" data-bs-toggle="modal" data-bs-target="#emailNotificationModal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell me-2" viewBox="0 0 16 16">
                                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628.134 2.197.459 3.742.16.767.376 1.566.663 2.258h10.244c.287-.692.502-1.49.663-2.258C13.866 8.197 14 6.628 14 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1h12.44z"/>
                            </svg>
                            啟動Email通知
                        </button>
                    }
                </div>
            }
        </div>
    </div>
    
    <h2 class="mb-4">商品列表</h2>

    <!-- 搜尋與篩選表單 -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" id="searchForm">
                <!-- 預設顯示區域 -->
                <div class="row g-3 mb-3">
                    <div class="col-12 col-md-6">
                        <label for="search" class="form-label">關鍵字搜尋</label>
                        <input type="text" 
                               class="form-control" 
                               id="search" 
                               name="search" 
                               value="@Model?.Search" 
                               placeholder="搜尋商品標題或描述...">
                    </div>
                    <div class="col-12 col-md-6 d-flex align-items-end gap-2">
                        <button type="button" 
                                class="btn btn-outline-secondary" 
                                data-bs-toggle="collapse" 
                                data-bs-target="#advancedFilters" 
                                aria-expanded="false" 
                                aria-controls="advancedFilters"
                                id="advancedFilterBtn">
                            <span id="advancedFilterBtnText">進階篩選</span>
                        </button>
                        <button type="submit" class="btn btn-primary flex-fill">搜尋</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">清除</a>
                    </div>
                </div>


                <!-- 可展開的進階篩選區域 -->
                <div class="collapse" id="advancedFilters">
                    <div class="row g-3">
                        <div class="col-6 col-md-3">
                            <label for="category" class="form-label">商品分類</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">全部</option>
                                @foreach (var cat in Html.GetEnumSelectList<NeighborGoods.Web.Models.Enums.ListingCategory>())
                                {
                                    <option value="@cat.Value" selected="@(Model?.Category?.ToString() == cat.Value)">@cat.Text</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-6 col-md-3">
                            <label for="condition" class="form-label">新舊程度</label>
                            <select class="form-select" id="condition" name="condition">
                                <option value="">全部</option>
                                @foreach (var cond in Html.GetEnumSelectList<NeighborGoods.Web.Models.Enums.ListingCondition>())
                                {
                                    <option value="@cond.Value" selected="@(Model?.Condition?.ToString() == cond.Value)">@cond.Text</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-6 col-md-3">
                            <label for="residence" class="form-label">社宅名稱</label>
                            <select class="form-select" id="residence" name="residence">
                                <option value="">全部</option>
                                @foreach (var res in Html.GetEnumSelectList<NeighborGoods.Web.Models.Enums.ListingResidence>())
                                {
                                    <option value="@res.Value" selected="@(Model?.Residence?.ToString() == res.Value)">@res.Text</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-6 col-md-3">
                            <label for="minPrice" class="form-label">最低價格</label>
                            <input type="number" 
                                   class="form-control" 
                                   id="minPrice" 
                                   name="minPrice" 
                                   value="@Model?.MinPrice" 
                                   min="0" 
                                   placeholder="0">
                        </div>
                        
                        <div class="col-6 col-md-3">
                            <label for="maxPrice" class="form-label">最高價格</label>
                            <input type="number" 
                                   class="form-control" 
                                   id="maxPrice" 
                                   name="maxPrice" 
                                   value="@Model?.MaxPrice" 
                                   min="0" 
                                   placeholder="不限">
                        </div>
                        
                        <div class="col-12">
                            <label class="form-label d-block mb-2">特殊篩選</label>
                            <div class="d-flex gap-2 flex-wrap">
                                <!-- 免費商品切換按鈕 -->
                                <button type="button" 
                                        class="btn @(Model?.IsFree == true ? "btn-success" : "btn-outline-success") filter-toggle-btn" 
                                        data-filter="isFree"
                                        id="isFreeBtn">
                                    免費商品
                                </button>
                                <input type="hidden" name="isFree" id="isFreeInput" value="@(Model?.IsFree == true ? "true" : "")">
                                
                                <!-- 愛心商品切換按鈕 -->
                                <button type="button" 
                                        class="btn @(Model?.IsCharity == true ? "btn-danger" : "btn-outline-danger") filter-toggle-btn" 
                                        data-filter="isCharity"
                                        id="isCharityBtn">
                                    愛心商品
                                </button>
                                <input type="hidden" name="isCharity" id="isCharityInput" value="@(Model?.IsCharity == true ? "true" : "")">
                                
                                <!-- 可否以物易物切換按鈕 -->
                                <button type="button"
                                        class="btn @(Model?.IsTradeable == true ? "btn-info" : "btn-outline-info") filter-toggle-btn"
                                        data-filter="isTradeable"
                                        id="isTradeableBtn">
                                    可否以物易物
                                </button>
                                <input type="hidden" name="isTradeable" id="isTradeableInput" value="@(Model?.IsTradeable == true ? "true" : "")">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model == null || Model.Listings == null || !Model.Listings.Any())
    {
        <div class="alert alert-info" role="alert">
            目前沒有上架中的商品。
        </div>
    }
    else
    {
        <div class="listing-list">
            @foreach (var listing in Model.Listings)
            {
                var timeAgo = "";
                var timeDiff = TaiwanTime.Now - listing.CreatedAt;
                if (timeDiff.TotalDays < 1)
                {
                    if (timeDiff.TotalHours < 1)
                    {
                        timeAgo = $"{(int)timeDiff.TotalMinutes} 分鐘前";
                    }
                    else
                    {
                        timeAgo = $"{(int)timeDiff.TotalHours} 小時前";
                    }
                }
                else if (timeDiff.TotalDays < 7)
                {
                    timeAgo = $"{(int)timeDiff.TotalDays} 天前";
                }
                else if (timeDiff.TotalDays < 30)
                {
                    timeAgo = $"{(int)(timeDiff.TotalDays / 7)} 週前";
                }
                else if (timeDiff.TotalDays < 365)
                {
                    timeAgo = $"{(int)(timeDiff.TotalDays / 30)} 個月前";
                }
                else
                {
                    timeAgo = $"{(int)(timeDiff.TotalDays / 365)} 年前";
                }

                <a asp-controller="Listing" asp-action="Details" asp-route-id="@listing.Id" class="listing-card">
                    @if (!string.IsNullOrEmpty(listing.FirstImageUrl))
                    {
                        <img src="@listing.FirstImageUrl" class="listing-card-image" alt="@listing.Title">
                    }
                    else
                    {
                        <div class="listing-card-image-placeholder">
                            <span>無圖片</span>
                        </div>
                    }
                    <div class="listing-card-content">
                        <div class="listing-card-tags">
                            <span class="listing-card-tag listing-card-tag-category">@listing.CategoryDisplayName</span>
                            @if (!string.IsNullOrEmpty(listing.ConditionDisplayName))
                            {
                                <span class="listing-card-tag listing-card-tag-condition">@listing.ConditionDisplayName</span>
                            }
                            @if (!string.IsNullOrEmpty(listing.ResidenceDisplayName))
                            {
                                <span class="listing-card-tag listing-card-tag-residence">@listing.ResidenceDisplayName</span>
                            }
                        </div>
                        <div>
                            <h5 class="listing-card-title">@listing.Title</h5>
                            <div class="listing-card-price">
                                @if (listing.IsFree)
                                {
                                    <span class="badge bg-success">免費</span>
                                }
                                else
                                {
                                    <span>NT$ @listing.Price.ToString("N0")</span>
                                }
                                @if (listing.IsCharity)
                                {
                                    <span class="badge bg-danger ms-1">愛心商品</span>
                                }
                                @if (listing.IsTradeable)
                                {
                                    <span class="badge bg-info ms-1">可易物</span>
                                }
                            </div>
                        </div>
                        <div class="listing-card-meta">
                            <div>賣家：@listing.SellerDisplayName</div>
                            <div class="listing-card-time">@timeAgo</div>
                        </div>
                    </div>
                </a>
            }
        </div>
        
        <!-- 載入更多按鈕 -->
        @if (Model != null && Model.HasMore)
        {
            <div class="text-center mt-4 mb-4" id="loadMoreContainer">
                <button type="button" class="btn btn-outline-primary" id="loadMoreBtn">
                    <span id="loadMoreText">載入更多</span>
                    <span id="loadMoreSpinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                </button>
            </div>
        }
    }
</div>

<!-- Email 通知設定 Modal -->
@if (isAuthenticated && ViewBag.HasEmail != true)
{
    <div class="modal fade" id="emailNotificationModal" tabindex="-1" aria-labelledby="emailNotificationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="emailNotificationModalLabel">啟動 Email 通知</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">請輸入您的 Email 地址，我們會在有新訊息或商品更新時通知您：</p>
                    <form id="emailNotificationForm">
                        <div class="mb-3">
                            <label for="emailInput" class="form-label">Email 地址</label>
                            <input type="email" class="form-control" id="emailInput" name="email" placeholder="example@email.com" required>
                            <div class="invalid-feedback" id="emailError"></div>
                        </div>
                    </form>
                    <div class="alert alert-info mb-0" role="alert">
                        <small>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle me-1" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                            </svg>
                            <strong>溫馨提醒：</strong>通知郵件可能會被歸類到垃圾郵件，如果收件匣找不到，請檢查垃圾信件夾。若仍有問題，歡迎透過「<a asp-controller="ContactAdmin" asp-action="Index" class="alert-link">聯絡管理員</a>」與我們聯繫。
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-success" id="submitEmailBtn">
                        <span id="submitEmailText">確認</span>
                        <span id="submitEmailSpinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        (function() {
            // 取得所有篩選元素
            const searchInput = document.getElementById('search');
            const categorySelect = document.getElementById('category');
            const conditionSelect = document.getElementById('condition');
            const minPriceInput = document.getElementById('minPrice');
            const maxPriceInput = document.getElementById('maxPrice');
            const isFreeBtn = document.getElementById('isFreeBtn');
            const isFreeInput = document.getElementById('isFreeInput');
            const isCharityBtn = document.getElementById('isCharityBtn');
            const isCharityInput = document.getElementById('isCharityInput');
            const isTradeableBtn = document.getElementById('isTradeableBtn');
            const isTradeableInput = document.getElementById('isTradeableInput');
            const advancedFilters = document.getElementById('advancedFilters');
            const advancedFilterBtn = document.getElementById('advancedFilterBtn');
            const advancedFilterBtnText = document.getElementById('advancedFilterBtnText');

            // 計算已設定的篩選條件數量
            function countActiveFilters() {
                let count = 0;
                if (searchInput && searchInput.value.trim()) count++;
                if (categorySelect && categorySelect.value) count++;
                if (conditionSelect && conditionSelect.value) count++;
                if (minPriceInput && minPriceInput.value) count++;
                if (maxPriceInput && maxPriceInput.value) count++;
                if (isFreeInput && isFreeInput.value === 'true') count++;
                if (isCharityInput && isCharityInput.value === 'true') count++;
                if (isTradeableInput && isTradeableInput.value === 'true') count++;
                return count;
            }


            // 切換篩選按鈕狀態
            function toggleFilterButton(btn, input, colorType) {
                const isActive = input.value === 'true';
                
                if (isActive) {
                    // 切換為未啟用
                    btn.classList.remove(`btn-${colorType}`);
                    btn.classList.add(`btn-outline-${colorType}`);
                    input.value = '';
                } else {
                    // 切換為啟用
                    btn.classList.remove(`btn-outline-${colorType}`);
                    btn.classList.add(`btn-${colorType}`);
                    input.value = 'true';
                }
            }

            // 免費商品按鈕點擊事件
            if (isFreeBtn) {
                isFreeBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    toggleFilterButton(isFreeBtn, isFreeInput, 'success');
                });
            }

            // 愛心商品按鈕點擊事件
            if (isCharityBtn) {
                isCharityBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    toggleFilterButton(isCharityBtn, isCharityInput, 'danger');
                });
            }

            // 可否以物易物按鈕點擊事件
            if (isTradeableBtn) {
                isTradeableBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    toggleFilterButton(isTradeableBtn, isTradeableInput, 'info');
                });
            }

            // 監聽進階篩選展開/收合事件，更新按鈕文字
            if (advancedFilters && advancedFilterBtnText) {
                advancedFilters.addEventListener('show.bs.collapse', function() {
                    advancedFilterBtnText.textContent = '關閉篩選';
                });
                
                advancedFilters.addEventListener('hide.bs.collapse', function() {
                    advancedFilterBtnText.textContent = '進階篩選';
                });
            }

            // 初始化：如果有篩選條件，預設展開進階篩選
            if (countActiveFilters() > 0) {
                const bsCollapse = new bootstrap.Collapse(advancedFilters, {
                    toggle: false
                });
                bsCollapse.show();
                advancedFilterBtn.setAttribute('aria-expanded', 'true');
                if (advancedFilterBtnText) {
                    advancedFilterBtnText.textContent = '關閉篩選';
                }
            }

            // 載入更多功能
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            const loadMoreContainer = document.getElementById('loadMoreContainer');
            const loadMoreText = document.getElementById('loadMoreText');
            const loadMoreSpinner = document.getElementById('loadMoreSpinner');
            const listingList = document.querySelector('.listing-list');
            
            if (loadMoreBtn && listingList) {
                let currentPage = @(Model?.Page ?? 1);
                let isLoading = false;

                loadMoreBtn.addEventListener('click', async function() {
                    if (isLoading) return;
                    
                    isLoading = true;
                    loadMoreBtn.disabled = true;
                    loadMoreText.textContent = '載入中...';
                    loadMoreSpinner.classList.remove('d-none');

                    try {
                        // 收集所有篩選條件
                        const params = new URLSearchParams();
                        if (searchInput && searchInput.value.trim()) {
                            params.append('search', searchInput.value.trim());
                        }
                        if (categorySelect && categorySelect.value) {
                            params.append('category', categorySelect.value);
                        }
                        if (conditionSelect && conditionSelect.value) {
                            params.append('condition', conditionSelect.value);
                        }
                        if (minPriceInput && minPriceInput.value) {
                            params.append('minPrice', minPriceInput.value);
                        }
                        if (maxPriceInput && maxPriceInput.value) {
                            params.append('maxPrice', maxPriceInput.value);
                        }
                        if (isFreeInput && isFreeInput.value === 'true') {
                            params.append('isFree', 'true');
                        }
                        if (isCharityInput && isCharityInput.value === 'true') {
                            params.append('isCharity', 'true');
                        }
                        if (isTradeableInput && isTradeableInput.value === 'true') {
                            params.append('isTradeable', 'true');
                        }
                        params.append('page', currentPage + 1);

                        const response = await fetch(`@Url.Action("Index", "Home")?${params.toString()}`, {
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (!response.ok) {
                            throw new Error('載入失敗');
                        }

                        const data = await response.json();
                        
                        // 動態建立商品卡片並追加到列表
                        data.listings.forEach(function(listing) {
                            const timeAgo = formatTimeAgo(new Date(listing.createdAt));
                            
                            // 轉義 HTML 特殊字元
                            const escapeHtml = (text) => {
                                const div = document.createElement('div');
                                div.textContent = text;
                                return div.innerHTML;
                            };
                            
                            const tagsHtml = `<div class="listing-card-tags">
                                <span class="listing-card-tag listing-card-tag-category">${escapeHtml(listing.categoryDisplayName || '')}</span>
                                ${listing.conditionDisplayName ? `<span class="listing-card-tag listing-card-tag-condition">${escapeHtml(listing.conditionDisplayName)}</span>` : ''}
                                ${listing.residenceDisplayName ? `<span class="listing-card-tag listing-card-tag-residence">${escapeHtml(listing.residenceDisplayName)}</span>` : ''}
                            </div>`;
                            const cardHtml = `
                                <a href="@Url.Action("Details", "Listing")/${listing.id}" class="listing-card">
                                    ${listing.firstImageUrl 
                                        ? `<img src="${escapeHtml(listing.firstImageUrl)}" class="listing-card-image" alt="${escapeHtml(listing.title)}">`
                                        : `<div class="listing-card-image-placeholder"><span>無圖片</span></div>`
                                    }
                                    <div class="listing-card-content">
                                        ${tagsHtml}
                                        <div>
                                            <h5 class="listing-card-title">${escapeHtml(listing.title)}</h5>
                                            <div class="listing-card-price">
                                                ${listing.isFree 
                                                    ? '<span class="badge bg-success">免費</span>'
                                                    : `<span>NT$ ${parseInt(listing.price).toLocaleString()}</span>`
                                                }
                                                ${listing.isCharity 
                                                    ? '<span class="badge bg-danger ms-1">愛心商品</span>'
                                                    : ''
                                                }
                                                ${listing.isTradeable
                                                    ? '<span class="badge bg-info ms-1">可易物</span>'
                                                    : ''
                                                }
                                            </div>
                                        </div>
                                        <div class="listing-card-meta">
                                            <div>賣家：${escapeHtml(listing.sellerDisplayName)}</div>
                                            <div class="listing-card-time">${timeAgo}</div>
                                        </div>
                                    </div>
                                </a>
                            `;
                            
                            listingList.insertAdjacentHTML('beforeend', cardHtml);
                        });

                        currentPage = data.page;

                        // 如果沒有更多商品，隱藏按鈕
                        if (!data.hasMore) {
                            loadMoreContainer.style.display = 'none';
                        }
                    } catch (error) {
                        console.error('載入更多商品時發生錯誤:', error);
                        loadMoreText.textContent = '載入失敗，請重試';
                        alert('載入失敗，請重新整理頁面後再試');
                    } finally {
                        isLoading = false;
                        loadMoreBtn.disabled = false;
                        loadMoreText.textContent = '載入更多';
                        loadMoreSpinner.classList.add('d-none');
                    }
                });
            }

            // 格式化時間（與伺服器端邏輯一致）
            function formatTimeAgo(date) {
                const now = new Date();
                const diff = now - date;
                const minutes = Math.floor(diff / 60000);
                const hours = Math.floor(diff / 3600000);
                const days = Math.floor(diff / 86400000);
                const weeks = Math.floor(days / 7);
                const months = Math.floor(days / 30);
                const years = Math.floor(days / 365);

                if (days < 1) {
                    if (hours < 1) {
                        return `${minutes} 分鐘前`;
                    } else {
                        return `${hours} 小時前`;
                    }
                } else if (days < 7) {
                    return `${days} 天前`;
                } else if (days < 30) {
                    return `${weeks} 週前`;
                } else if (days < 365) {
                    return `${months} 個月前`;
                } else {
                    return `${years} 年前`;
                }
            }
        })();
    </script>

