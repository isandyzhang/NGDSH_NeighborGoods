    @if (isAuthenticated)
    {
        <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.min.js"></script>
        <script>
            (function() {
                // SignalR 連線
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/messageHub")
                    .withAutomaticReconnect()
                    .build();

                // Badge 更新邏輯（使用 debounce 優化）
                let updateTimeout = null;
                function updateUnreadBadge(increment = false) {
                    // 只在頁面可見時更新
                    if (document.hidden) {
                        return;
                    }

                    // 清除之前的 timeout
                    if (updateTimeout) {
                        clearTimeout(updateTimeout);
                    }

                    // 使用 debounce，避免頻繁更新
                    updateTimeout = setTimeout(function() {
                        const badgeContainer = document.getElementById('unread-message-badge');
                        if (!badgeContainer) return;

                        let currentCount = 0;
                        const existingBadge = badgeContainer.querySelector('.unread-badge');
                        if (existingBadge) {
                            currentCount = parseInt(existingBadge.textContent) || 0;
                        }

                        const newCount = increment ? currentCount + 1 : currentCount;

                        if (newCount > 0) {
                            if (!existingBadge) {
                                // 創建 badge
                                const badge = document.createElement('span');
                                badge.className = 'unread-badge';
                                badge.textContent = newCount;
                                badgeContainer.appendChild(badge);
                            } else {
                                // 更新 badge
                                existingBadge.textContent = newCount;
                            }
                        } else if (existingBadge) {
                            // 移除 badge
                            existingBadge.remove();
                        }
                    }, 300); // 300ms debounce
                }

                // 監聽新訊息
                connection.on("ReceiveMessage", function (senderId, senderDisplayName, content, createdAt) {
                    updateUnreadBadge(true);
                });

                // 連線管理
                connection.start().then(function () {
                    console.log("SignalR 連線已建立（首頁）");
                }).catch(function (err) {
                    console.error("SignalR 連線失敗:", err);
                });

                // 頁面可見性變化時處理
                document.addEventListener('visibilitychange', function() {
                    if (!document.hidden && connection.state === signalR.HubConnectionState.Disconnected) {
                        // 頁面重新可見且連線斷開時，嘗試重連
                        connection.start().catch(function(err) {
                            console.error("SignalR 重連失敗:", err);
                        });
                    }
                });

                // 頁面卸載時關閉連線
                window.addEventListener('beforeunload', function() {
                    if (connection.state !== signalR.HubConnectionState.Disconnected) {
                        connection.stop();
                    }
                });
            })();
        </script>
    }

    @if (isAuthenticated && ViewBag.HasEmail != true)
    {
        <script>
            (function() {
                const emailModal = document.getElementById('emailNotificationModal');
                const emailInput = document.getElementById('emailInput');
                const submitEmailBtn = document.getElementById('submitEmailBtn');
                const submitEmailText = document.getElementById('submitEmailText');
                const submitEmailSpinner = document.getElementById('submitEmailSpinner');
                const emailError = document.getElementById("emailError");
                const emailForm = document.getElementById("emailNotificationForm");

                // 當 Modal 顯示時，聚焦到 Email 輸入框
                if (emailModal) {
                    emailModal.addEventListener('shown.bs.modal', function() {
                        emailInput.focus();
                    });

                    // 當 Modal 關閉時，清除表單
                    emailModal.addEventListener('hidden.bs.modal', function() {
                            emailForm.reset();
                            emailInput.classList.remove("is-invalid");
                            emailError.textContent = "";
                    });
                }

                // 提交 Email
                if (submitEmailBtn) {
                    submitEmailBtn.addEventListener('click', async function() {
                        const email = emailInput.value.trim();

                        if (!email) {
                            emailInput.classList.add("is-invalid");
                            emailError.textContent = "請輸入 Email 地址";
                            return;
                        }

                        // 簡單的 Email 格式驗證
                        if (!email.includes("@@") || !email.includes(".")) {
                            emailInput.classList.add("is-invalid");
                            emailError.textContent = "Email 格式不正確";
                            return;
                        }

                        // 顯示載入狀態
                        submitEmailBtn.disabled = true;
                        submitEmailText.textContent = "處理中...";
                        submitEmailSpinner.classList.remove("d-none");
                        emailInput.classList.remove("is-invalid");
                        emailError.textContent = "";

                        try {
                            const response = await fetch("@Url.Action("SetEmailAndEnableNotification", "Account")", {
                                method: "POST",
                                headers: {
                                    "Content-Type": "application/json"
                                },
                                body: JSON.stringify({ email: email })
                            });

                            const data = await response.json();

                            if (data.success) {
                                // 成功：關閉 Modal 並重新載入頁面
                                const bsModal = bootstrap.Modal.getInstance(emailModal);
                                bsModal.hide();
                                
                                // 顯示成功訊息
                                alert("Email 通知已啟用！");
                                
                                // 重新載入頁面以更新按鈕狀態
                                window.location.reload();
                            } else {
                                // 失敗：顯示錯誤訊息
                                emailInput.classList.add("is-invalid");
                                emailError.textContent = data.message || "設定失敗，請稍後再試";
                            }
                        } catch (error) {
                            console.error("設定 Email 時發生錯誤:", error);
                            emailInput.classList.add("is-invalid");
                            emailError.textContent = "發生錯誤，請稍後再試";
                        } finally {
                            submitEmailBtn.disabled = false;
                            submitEmailText.textContent = "確認";
                            submitEmailSpinner.classList.add("d-none");
                        }
                    });
                }

                // Enter 鍵提交
                if (emailInput) {
                    emailInput.addEventListener("keypress", function(e) {
                        if (e.key === "Enter") {
                            e.preventDefault();
                            submitEmailBtn.click();
                        }
                    });
                }
            })();
        </script>
    }
