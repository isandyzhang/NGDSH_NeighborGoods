@functions {
    string GetStatusText(NeighborGoods.Web.Models.Enums.ListingStatus status)
    {
        return status switch
        {
            NeighborGoods.Web.Models.Enums.ListingStatus.Active => "上架中",
            NeighborGoods.Web.Models.Enums.ListingStatus.Reserved => "保留中",
            NeighborGoods.Web.Models.Enums.ListingStatus.Sold => "已售出",
            NeighborGoods.Web.Models.Enums.ListingStatus.Donated => "已捐贈",
            NeighborGoods.Web.Models.Enums.ListingStatus.Inactive => "已下架",
            _ => status.ToString()
        };
    }
}

