@model NeighborGoods.Web.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "登入";
}

<h2 class="mt-4 mb-3">登入</h2>

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-info">
            <p class="mb-1"><strong>建議：</strong>推薦使用 LINE 登入，流程最簡單，不需要先驗證 Email。</p>
            <p class="mb-0">使用帳號密碼登入的帳號，註冊時需完成 Email 驗證後才能登入並刊登商品。</p>
        </div>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-primary">登入</button>
            <a asp-action="Register" class="btn btn-link">還沒有帳號？前往註冊</a>
        </form>

        <hr />

        <form asp-action="ExternalLogin" method="post" class="mt-3">
            <input type="hidden" name="provider" value="LINE" />
            <input type="hidden" name="returnUrl" value="@(ViewData["ReturnUrl"] ?? Url.Content("~/"))" />
            <button type="submit" class="btn btn-success">
                使用 LINE 登入
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


