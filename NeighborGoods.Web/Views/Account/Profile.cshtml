@model NeighborGoods.Web.Models.ViewModels.ProfileViewModel
@using NeighborGoods.Web.Models.Enums

@{
    ViewData["Title"] = "個人資料";
}

<div class="container mt-4">
    <h2 class="mb-4">個人資料</h2>

    <!-- 個人資訊區塊 -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">基本資訊</h5>
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <strong>用戶名稱：</strong>
                    <div class="text-muted">@Model.User.UserName</div>
                </div>
                <div class="col-12 col-md-6">
                    <strong>顯示名稱：</strong>
                    <div class="text-muted">@Model.User.DisplayName</div>
                </div>
                <div class="col-12 col-md-6">
                    <strong>註冊時間：</strong>
                    <div class="text-muted">@Model.User.CreatedAt.ToString("yyyy/MM/dd HH:mm")</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.User.LineUserId))
                {
                    <div class="col-12 col-md-6">
                        <strong>登入方式：</strong>
                        <div class="text-muted">LINE 登入</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- 統計數據區塊 -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary mb-0">@Model.TotalListings</h3>
                    <small class="text-muted">總刊登數</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success mb-0">@Model.ActiveListings</h3>
                    <small class="text-muted">上架中</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-info mb-0">@Model.CompletedListings</h3>
                    <small class="text-muted">成交紀錄</small>
                </div>
            </div>
        </div>
    </div>

    <!-- LINE 通知設定區塊 -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">LINE 通知設定</h5>
            
            <div class="alert alert-secondary mb-3">
                <i class="bi bi-pause-circle"></i> LINE 通知功能已暫停使用
            </div>
            <p class="text-muted mb-0">
                <small>LINE 通知功能目前暫停服務，請使用 Email 通知功能接收訊息和交易通知。</small>
            </p>
        </div>
    </div>

    <!-- Email 通知設定區塊 -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Email 通知設定</h5>
            
            @if (string.IsNullOrEmpty(Model.User.Email) || !Model.User.EmailConfirmed)
            {
                <!-- Email 未設定或未驗證 -->
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-triangle"></i> 請先設定並驗證您的 Email 地址才能啟用 Email 通知
                </div>
                <p class="text-muted mb-0">
                    <small>Email 通知功能需要已驗證的 Email 地址。請前往帳號設定頁面設定 Email。</small>
                </p>
            }
            else if (!Model.User.EmailNotificationEnabled)
            {
                <!-- 未啟用狀態 -->
                <p class="text-muted mb-3">啟用 Email 通知後，您可以在 Email 中接收訊息和交易通知。</p>
                <form asp-action="EnableEmailNotification" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3" style="min-height: 50px; font-size: 1.1rem;">
                        啟用 Email 通知
                    </button>
                </form>
                <div class="mb-0">
                    <strong>Email 地址：</strong>
                    <span class="text-muted">@Model.User.Email</span>
                </div>
            }
            else
            {
                <!-- 已啟用狀態 -->
                <div class="alert alert-success mb-3">
                    <i class="bi bi-check-circle"></i> Email 通知已啟用
                </div>
                <div class="mb-3">
                    <strong>Email 地址：</strong>
                    <span class="text-muted">@Model.User.Email</span>
                </div>
                <button type="button" class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#removeEmailModal" style="min-height: 44px;">
                    移除 Email
                </button>
            }
        </div>
    </div>

    <!-- 快速連結區塊 -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">我的商品</h5>
            <a asp-controller="Listing" asp-action="My" class="btn btn-primary btn-lg w-100 mb-3" style="min-height: 50px; font-size: 1.1rem;">
                查看我的商品
            </a>
        </div>
    </div>

    <!-- 成交紀錄區塊 -->
    @if (Model.CompletedListings > 0)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">成交紀錄</h5>
                <p class="text-muted">您有 @Model.CompletedListings 筆已售出或已捐贈的商品</p>
                <a asp-controller="Listing" asp-action="My" class="btn btn-outline-primary w-100" style="min-height: 44px;">
                    查看成交紀錄
                </a>
            </div>
        </div>
    }

    <!-- 刪除帳號區塊 -->
    <div class="card border-danger mb-4">
        <div class="card-body">
            <h5 class="card-title text-danger mb-3">危險操作</h5>
            <p class="text-muted mb-3">
                <strong>警告：</strong>刪除帳號將會永久刪除您的所有資料，包括：
            </p>
            <ul class="text-muted mb-3">
                <li>所有已刊登的商品</li>
                <li>所有商品圖片</li>
                <li>所有交易紀錄</li>
            </ul>
            <p class="text-danger fw-bold mb-3">此操作無法復原！</p>
            <button type="button" class="btn btn-danger btn-lg w-100" data-bs-toggle="modal" data-bs-target="#deleteAccountModal" style="min-height: 50px; font-size: 1.1rem;">
                刪除帳號
            </button>
        </div>
    </div>
</div>

<!-- 刪除帳號確認 Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-danger">
                <h5 class="modal-title text-danger" id="deleteAccountModalLabel">確認刪除帳號</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="fw-bold text-danger">您確定要刪除帳號嗎？</p>
                <p>此操作將會：</p>
                <ul>
                    <li>永久刪除您的所有已刊登商品（共 @Model.TotalListings 筆）</li>
                    <li>永久刪除所有商品圖片</li>
                    <li>永久刪除所有交易紀錄</li>
                </ul>
                <p class="text-danger fw-bold">此操作無法復原！</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <form asp-action="DeleteAccount" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">確認刪除</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- 移除 Email 確認 Modal -->
<div class="modal fade" id="removeEmailModal" tabindex="-1" aria-labelledby="removeEmailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-danger">
                <h5 class="modal-title text-danger" id="removeEmailModalLabel">確認移除 Email</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="fw-bold text-danger">您確定要移除目前設定的 Email 嗎？</p>
                <ul>
                    <li>移除後將無法再收到 Email 通知。</li>
                    <li>之後要刊登或編輯商品時，必須重新完成 Email 驗證。</li>
                    <li>若使用帳號密碼登入，也需要重新驗證 Email 才能登入。</li>
                </ul>
                <p class="text-danger fw-bold mb-0">此操作不會刪除帳號，但會清除目前的 Email 設定。</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <form asp-action="DisableEmailNotification" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">確認移除 Email</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* 手機友善設計 */
        @@media (max-width: 576px) {
            .card {
                border-radius: 8px;
            }
            
            .btn-lg {
                font-size: 16px; /* 防止 iOS 自動縮放 */
            }
        }
    </style>
}

