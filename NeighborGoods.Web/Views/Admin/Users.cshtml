@model NeighborGoods.Web.Models.ViewModels.AdminUsersViewModel

@{
    ViewData["Title"] = "用戶管理";
    Layout = "_AdminLayout";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>用戶名稱</th>
            <th>Email</th>
            <th>LINE綁定</th>
            <th>通知啟用</th>
            <th>註冊時間</th>
            <th>商品數量</th>
            <th>對話數量</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.DisplayName</td>
                <td>@user.Email</td>
                <td>@(user.IsLineBound ? "是" : "否")</td>
                <td>@(user.IsNotificationEnabled ? "是" : "否")</td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@user.ListingCount</td>
                <td>@user.ConversationCount</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('確定要刪除此用戶嗎？');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" asp-action="Users" asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}

