@model NeighborGoods.Web.Models.ViewModels.ContactAdminViewModel

@{
    ViewData["Title"] = "聯絡管理員";
}

<div class="container mt-4">
    <h2 class="mb-4">聯絡管理員</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="SendMessage" method="post">
                @Html.AntiForgeryToken()
                
                <div class="mb-3">
                    <label asp-for="Content" class="form-label">訊息內容</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="請輸入您想告訴管理員的訊息..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">發送</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">取消</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

