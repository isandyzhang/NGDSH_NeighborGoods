@model NeighborGoods.Web.Models.ViewModels.UpdateListingStatusViewModel
@using NeighborGoods.Web.Models.Enums

@{
    ViewData["Title"] = "修改商品狀態";
}

<div class="container mt-4">
    <h2 class="mb-4">修改商品狀態</h2>

    <div class="row">
        <div class="col-12 col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                </div>
            </div>

            <form asp-action="UpdateStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold">商品狀態</label>
                    <select asp-for="Status" class="form-select form-select-lg" style="font-size: 16px;">
                        <option value="@((int)ListingStatus.Active)">上架中</option>
                        <option value="@((int)ListingStatus.Reserved)">保留中</option>
                        <option value="@((int)ListingStatus.Sold)">已售出</option>
                        <option value="@((int)ListingStatus.Donated)">已捐贈</option>
                        <option value="@((int)ListingStatus.Inactive)">已下架</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-controller="Listing" asp-action="Details" asp-route-id="@Model.Id" 
                       class="btn btn-secondary btn-lg" style="min-height: 50px; font-size: 1.1rem;">
                        取消
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg" style="min-height: 50px; font-size: 1.1rem;">
                        確認修改
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        /* 手機友善設計 */
        @@media (max-width: 576px) {
            .form-select-lg {
                font-size: 16px; /* 防止 iOS 自動縮放 */
            }
            
            .btn-lg {
                font-size: 16px;
            }
            
            .d-md-flex {
                flex-direction: column;
            }
            
            .d-md-flex .btn {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>
}

