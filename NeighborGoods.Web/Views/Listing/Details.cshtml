@model NeighborGoods.Web.Models.ViewModels.ListingDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
    ViewData["HideFooter"] = true;
}

<!-- 頂部導航欄 -->
<div class="listing-top-nav">
    <a href="javascript:history.back()" class="back-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
    </a>
</div>

<!-- 商品圖片區 -->
@if (Model.Images != null && Model.Images.Any())
{
    <div id="listingCarousel" class="carousel slide listing-image-carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Images.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@Model.Images[i]" class="d-block w-100 listing-image" alt="商品圖片 @(i + 1)">
                </div>
            }
        </div>
        @if (Model.Images.Count > 1)
        {
            <button class="carousel-control-prev" type="button" data-bs-target="#listingCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">上一張</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#listingCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">下一張</span>
            </button>
            <!-- 圖片指示器 -->
            <div class="carousel-indicators listing-indicators">
                @for (int i = 0; i < Model.Images.Count; i++)
                {
                    <button type="button" data-bs-target="#listingCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="圖片 @(i + 1)"></button>
                }
            </div>
        }
    </div>
}
else
{
    <div class="listing-image-placeholder">
        <span class="text-muted">無圖片</span>
    </div>
}

<!-- 商品資訊區 -->
<div class="listing-info-container">
    <div class="listing-info-content">
        <!-- 標題 -->
        <h1 class="listing-title">@Model.Title</h1>

        <!-- 價格 -->
        <div class="listing-price-section">
            @if (Model.IsFree)
            {
                <span class="listing-price-free">免費</span>
            }
            else
            {
                <span class="listing-price">NT$ @Model.Price.ToString("N0")</span>
            }
            @if (Model.IsCharity)
            {
                <span class="badge bg-danger ms-2">愛心商品</span>
            }
        </div>

        <!-- 發布信息 -->
        <div class="listing-meta">
            <span class="listing-time">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="me-1">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                </svg>
                <span class="relative-time" data-created-at="@Model.CreatedAt.ToString("yyyy-MM-ddTHH:mm:ss")+08:00"></span>
                <span class="ms-1">by @Model.SellerDisplayName</span>
            </span>
        </div>

        <!-- 狀態和分類標籤 -->
        <div class="listing-tags">
            <span class="badge bg-secondary listing-status-badge">@GetStatusText(Model.Status)</span>
            <span class="badge bg-info ms-2 listing-category-badge">@GetCategoryText(Model.Category)</span>
            <span class="badge bg-success ms-2">@GetConditionText(Model.Condition)</span>
        </div>

        <hr class="listing-divider" />

        <!-- 商品描述 -->
        <div class="listing-description">
            <h5 class="listing-section-title">商品描述</h5>
            <p class="listing-description-text">@Model.Description</p>
        </div>

        <!-- 面交地點 -->
        <div class="listing-pickup">
            <h5 class="listing-section-title">面交地點</h5>
            <p class="listing-pickup-text">@GetPickupLocationText(Model.PickupLocation)</p>
        </div>

        <hr class="listing-divider" />

        <!-- 賣家信息 -->
        <div class="listing-seller-info">
            <div class="text-muted">
                <strong>賣家：</strong>
                <a asp-controller="Account" asp-action="SellerProfile" asp-route-sellerId="@Model.SellerId" class="text-decoration-none">
                    @Model.SellerDisplayName
                </a><br>
                @if (Model.SellerTotalCompletedTransactions > 0)
                {
                    <text>
                        <strong>成交紀錄：</strong>@Model.SellerTotalCompletedTransactions 件<br>
                        <strong>平均評分：</strong>@Html.Raw(GetStarRatingHtml(Model.SellerAverageRating))
                        <span>@Model.SellerAverageRating.ToString("F1")</span><br>
                    </text>
                }
                <strong>刊登時間：</strong>@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")<br>
                @if (Model.UpdatedAt != Model.CreatedAt)
                {
                    <strong>更新時間：</strong>@Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")
                }
            </div>
        </div>

    </div>
</div>

<!-- 底部固定操作欄 -->
<div class="listing-bottom-bar">
    @if (Model.IsOwner)
    {
        <!-- 賣家看到的按鈕（只有刊登中才可以編輯/刪除） -->
        @if (Model.Status == NeighborGoods.Web.Models.Enums.ListingStatus.Active)
        {
            <a asp-controller="Listing" asp-action="Edit" asp-route-id="@Model.Id" 
               class="btn listing-edit-btn">
                編輯商品
            </a>
            <form asp-controller="Listing" asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                  onsubmit="return confirm('確定要刪除這個商品嗎？此操作無法復原。');" class="listing-delete-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn listing-delete-btn">
                    刪除商品
                </button>
            </form>
        }
    }
    else
    {
        <!-- 非賣家看到的按鈕，根據商品狀態顯示 -->
        @if (Model.Status == NeighborGoods.Web.Models.Enums.ListingStatus.Active)
        {
            <!-- 上架中：顯示我要聊聊和我想購買/我要索取 -->
            @if (Model.CanMessage)
            {
                <a asp-controller="Message" asp-action="ChatWithUser" 
                   asp-route-userId="@Model.SellerId" 
                   asp-route-listingId="@Model.Id"
                   asp-route-sendInitialMessage="false"
                   class="btn btn-primary listing-chat-btn">
                    我要聊聊
                </a>
            }
            @if (Model.IsFree || Model.IsCharity)
            {
                <a asp-controller="Message" asp-action="ChatWithUser" 
                   asp-route-userId="@Model.SellerId" 
                   asp-route-listingId="@Model.Id"
                   class="btn btn-danger listing-offer-btn">
                    我要索取
                </a>
            }
            else
            {
                <a asp-controller="Message" asp-action="ChatWithUser" 
                   asp-route-userId="@Model.SellerId" 
                   asp-route-listingId="@Model.Id"
                   class="btn btn-danger listing-offer-btn">
                    我想購買
                </a>
            }
        }
        else if (Model.Status == NeighborGoods.Web.Models.Enums.ListingStatus.Reserved)
        {
            <!-- 保留中：顯示保留中狀態 -->
            <button type="button" class="btn btn-secondary listing-status-disabled-btn" disabled>
                保留中
            </button>
        }
        else if (Model.Status == NeighborGoods.Web.Models.Enums.ListingStatus.Sold || Model.Status == NeighborGoods.Web.Models.Enums.ListingStatus.Donated)
        {
            <!-- 已售出/已捐贈：顯示已交易成功 -->
            <button type="button" class="btn btn-secondary listing-status-disabled-btn" disabled>
                已交易成功
            </button>
        }
        else if (Model.Status == NeighborGoods.Web.Models.Enums.ListingStatus.Inactive)
        {
            <!-- 已下架：顯示已下架狀態 -->
            <button type="button" class="btn btn-secondary listing-status-disabled-btn" disabled>
                已下架
            </button>
        }
    }
</div>

@functions {
    string GetStatusText(NeighborGoods.Web.Models.Enums.ListingStatus status)
    {
        return status switch
        {
            NeighborGoods.Web.Models.Enums.ListingStatus.Active => "上架中",
            NeighborGoods.Web.Models.Enums.ListingStatus.Reserved => "保留中",
            NeighborGoods.Web.Models.Enums.ListingStatus.Sold => "已售出",
            NeighborGoods.Web.Models.Enums.ListingStatus.Donated => "已捐贈",
            NeighborGoods.Web.Models.Enums.ListingStatus.Inactive => "已下架",
            _ => status.ToString()
        };
    }

    string GetCategoryText(NeighborGoods.Web.Models.Enums.ListingCategory category)
    {
        return category switch
        {
            NeighborGoods.Web.Models.Enums.ListingCategory.Furniture => "家具家飾",
            NeighborGoods.Web.Models.Enums.ListingCategory.Electronics => "電子產品",
            NeighborGoods.Web.Models.Enums.ListingCategory.Clothing => "服飾配件",
            NeighborGoods.Web.Models.Enums.ListingCategory.Books => "書籍文具",
            NeighborGoods.Web.Models.Enums.ListingCategory.Sports => "運動用品",
            NeighborGoods.Web.Models.Enums.ListingCategory.Toys => "玩具遊戲",
            NeighborGoods.Web.Models.Enums.ListingCategory.Kitchen => "廚房用品",
            NeighborGoods.Web.Models.Enums.ListingCategory.Daily => "生活用品",
            NeighborGoods.Web.Models.Enums.ListingCategory.Baby => "嬰幼兒用品",
            NeighborGoods.Web.Models.Enums.ListingCategory.Other => "其他",
            _ => category.ToString()
        };
    }

    string GetPickupLocationText(NeighborGoods.Web.Models.Enums.ListingPickupLocation location)
    {
        return location switch
        {
            NeighborGoods.Web.Models.Enums.ListingPickupLocation.NorthBuilding => "北棟管理室",
            NeighborGoods.Web.Models.Enums.ListingPickupLocation.SouthBuilding => "南棟管理室",
            NeighborGoods.Web.Models.Enums.ListingPickupLocation.Gym => "風雨操場",
            NeighborGoods.Web.Models.Enums.ListingPickupLocation.Message => "私訊",
            _ => location.ToString()
        };
    }

    string GetConditionText(NeighborGoods.Web.Models.Enums.ListingCondition condition)
    {
        return condition switch
        {
            NeighborGoods.Web.Models.Enums.ListingCondition.New => "全新",
            NeighborGoods.Web.Models.Enums.ListingCondition.LikeNew => "近全新",
            NeighborGoods.Web.Models.Enums.ListingCondition.Good => "良好",
            NeighborGoods.Web.Models.Enums.ListingCondition.Fair => "普通",
            NeighborGoods.Web.Models.Enums.ListingCondition.WellUsed => "歲月痕跡",
            _ => condition.ToString()
        };
    }

    string GetStarRatingHtml(double rating)
    {
        var roundedRating = (int)Math.Round(rating);
        var html = new System.Text.StringBuilder();
        for (int i = 1; i <= 5; i++)
        {
            var starClass = i <= roundedRating ? "text-warning" : "text-muted";
            html.Append($"<span class=\"{starClass}\">★</span>");
        }
        return html.ToString();
    }
}

